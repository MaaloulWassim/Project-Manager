{% extends 'loginbase.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.usertype }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}
    </form>
{% endblock %}
